+    coef.half[0].val[3] = unzipped.val[0];
+    coef.half[1].val[3] = unzipped.val[1];
+
+#ifdef DEBUG_IDCT_DEQUANTIZE
+    fprintf(stderr, "Dequantizing and transposing:\n");
+    const int16x8_t* coeflp = (const int16x8_t*) cp;
+    int i, j;
+    for (i = 0; i < 2; ++i) {
+      for (j = 0; j < 4; ++j) {
